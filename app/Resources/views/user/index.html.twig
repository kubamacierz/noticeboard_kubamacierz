{% extends 'base.html.twig' %}

{% block body %}

    {% include "AppBundle:LayoutController:navbar.html.twig" %}

    <h4>Users list</h4>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>User name</th>
                <th>User email</th>
                <th>Last login date & time</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{% if user.lastLogin %}
                    {{ user.lastLogin|date('Y-m-d H:i:s')}}
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('user_show', { 'id': user.id }) }}">User data</a>
                    <a href="{{ path('user_edit', { 'id': user.id }) }}"> | Edit User</a>
                    <a href="{{ path('user_delete', { 'id': user.id }) }}"> | Delete User</a>
                    <a href="{{ path('comments_by_user_id', { 'id': user.id }) }}"> | User Comments</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_new') }}">Create a new user</a>
        </li>
    </ul>
{% endblock %}
