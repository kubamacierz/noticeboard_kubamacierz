{% extends 'base.html.twig' %}

{% block body %}
    <h1>Użytkownik nr {{ user.id }}</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nazwa użytkownia</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Data ostaniego logowania</th>
                <td>{{ user.lastLogin|date("Y-m-d H:i:s") }}</td>
            </tr>
            <tr>
                <th>Uprawnienia</th>
                <td>
                {% for role in user.roles %}
                    {{ role }}{% if false == loop.last %}, {% endif %}
                {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_index') }}">Wróć do listy wszystkich użytkowników</a>
        </li>
        <li>
            <a href="{{ path('user_edit', { 'id': user.id }) }}">Edytuj</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Usuń">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
